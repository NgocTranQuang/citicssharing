<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/button_disable" />

            <solid android:color="@color/button_disable" />

            <corners android:radius="50dip" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp">

            </padding>
        </shape>
    </item>

    <!--When Button is in pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/tab_active_color" />

            <solid android:color="@color/tab_active_color" />

            <corners android:radius="50dip" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp">

            </padding>
        </shape>
    </item>

    <!--When Button is in selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/tab_active_color" />

            <solid android:color="@color/tab_active_color" />

            <corners android:radius="50dip" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp">

            </padding>
        </shape>
    </item>

    <!--Default Background Color -->
    <item>
        <shape android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/tab_active_color" />

            <solid android:color="@color/tab_active_color" />

            <corners android:radius="50dip" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp">

            </padding>
        </shape>
    </item>

</selector>