<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="17dp">

        <shape android:shape="rectangle">

            <solid android:color="@color/white" />
            <corners android:radius="8dp" />

            <padding android:bottom="17dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_divider" />

        </shape>

    </item>

    <item
        android:width="16dp"
        android:height="16dp"
        android:bottom="-8dp"
        android:gravity="bottom|center_horizontal">

        <rotate android:fromDegrees="45">

            <shape android:shape="rectangle">

                <solid android:color="@color/white" />
                <stroke
                    android:width="1dp"
                    android:color="@color/color_divider" />
            </shape>

        </rotate>

    </item>

    <item
        android:width="16dp"
        android:height="16dp"
        android:bottom="-7dp"
        android:gravity="bottom|center_horizontal">

        <rotate android:fromDegrees="45">

            <shape android:shape="rectangle">

                <solid android:color="@color/white" />
            </shape>

        </rotate>

    </item>
</layer-list>


