<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.citics.valuation.customview.HeaderLayout
        android:id="@+id/headerLayout"
        style="@style/styleHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:header_title="@string/cong_trinh_xay_dung_1" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_margin_large"
            android:paddingEnd="@dimen/activity_margin_large">


            <com.citics.valuation.customview.CiticsTextChooser
                android:id="@+id/btnChonLoaiCongTrinhXd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text_chooser_input_hint="@string/chon_loai_cong_trinh_xay_dung"
                app:text_chooser_title="@string/loai_cong_trinh" />

            <com.citics.valuation.customview.TextViewDrawableSize
                android:id="@+id/tvWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_large"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="@dimen/dimen_4"
                android:drawableTint="@color/icon_error"
                android:text="@string/vui_long_chon_loai_cong_trinh_xay_dung_truoc"
                android:textColor="@color/icon_error" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lnContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_margin_large"
                android:paddingBottom="@dimen/activity_margin_large">

                <com.citics.valuation.customview.CiticsTextField
                    android:id="@+id/tfTongDienTich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_large"
                    android:inputType="numberDecimal"
                    app:input_hint="@string/tong_dien_tich_xay_dung"
                    app:label_end="@string/m2"
                    app:label_icon_img="@drawable/arrow_zoom_out"
                    app:label_title="@string/tong_dien_tich_xay_dung" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lnTongDienTichThamDinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.citics.valuation.customview.TextViewDrawableSize
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/arrow_zoom_out"
                        android:drawablePadding="@dimen/activity_margin_medium"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="@string/dien_tich_cong_trinh" />

                    <com.citics.valuation.customview.ThongTinLayout
                        android:id="@+id/vTongDienTichXayDung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:thong_tin_layout_icon="@drawable/arrow_zoom_out"
                        app:thong_tin_layout_is_bold="true"
                        app:thong_tin_layout_show_divider="false"
                        app:thong_tin_layout_title="@string/tong_dien_tich_xay_dung"
                        app:thong_tin_layout_unit="@string/m2" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <com.citics.valuation.customview.TextViewDrawableSize
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_tang_noi"
                    android:drawablePadding="@dimen/activity_margin_medium"
                    android:text="@string/tang_noi" />

                <com.citics.valuation.customview.CustomViewDotLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/vSoTang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:tag="tang_tren"
                        app:input_hint="@string/nhap_so_tang"
                        app:label_icon_img="@drawable/ic_so_tang"
                        app:label_title="@string/so_tang" />

                </com.citics.valuation.customview.CustomViewDotLayout>

                <com.citics.valuation.customview.CustomViewDotLayout
                    android:id="@+id/d1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/l1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.citics.valuation.customview.TextViewDrawableSize
                            android:id="@+id/t1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_margin_medium"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/arrow_zoom_out"
                            android:drawablePadding="@dimen/activity_margin_medium"
                            android:text="@string/dien_tich_tang_noi" />

                        <TextView
                            android:id="@+id/tvDTTN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="@string/m2" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.citics.valuation.customview.CustomViewDotLayout>

                <com.citics.valuation.customview.CustomViewDotLayout
                    android:id="@+id/d2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/vDaCongNhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:tag="dien_tich_san_xay_dung_cac_tang_tren"
                        app:input_hint="@string/nhap_dien_tich"
                        app:label_end="@string/m2"
                        app:label_icon_img="@drawable/ic_under_huong_dong"
                        app:label_title="@string/da_cong_nhan" />

                </com.citics.valuation.customview.CustomViewDotLayout>

                <com.citics.valuation.customview.CustomViewDotLayout
                    android:id="@+id/d3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/vCPCHC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:tag="dien_tich_san_xay_dung_cac_tang_tren"
                        app:input_hint="@string/nhap_dien_tich"
                        app:label_end="@string/m2"
                        app:label_icon_img="@drawable/ic_under_huong_dong"
                        app:label_title="@string/co_phep_chua_hoan_cong" />

                </com.citics.valuation.customview.CustomViewDotLayout>

                <com.citics.valuation.customview.CustomViewDotLayout
                    android:id="@+id/d4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hide_bottom_line="true">

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/vKhongCoPhep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:tag="dien_tich_san_xay_dung_cac_tang_tren"
                        app:input_hint="@string/nhap_dien_tich"
                        app:label_end="@string/m2"
                        app:label_icon_img="@drawable/ic_under_huong_dong"
                        app:label_title="@string/khong_co_phep" />

                </com.citics.valuation.customview.CustomViewDotLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lnTangHam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:orientation="vertical">


                    <com.citics.valuation.customview.TextViewDrawableSize
                        android:id="@+id/t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_tang_noi"
                        android:drawablePadding="@dimen/activity_margin_medium"
                        android:text="@string/tang_ham_key" />

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vSoTangHam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:tag="tang_ham"
                            app:input_hint="@string/nhap_so_tang"
                            app:label_icon_img="@drawable/ic_so_tang"
                            app:label_title="@string/so_tang" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/l7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.citics.valuation.customview.TextViewDrawableSize
                                android:id="@+id/t8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_margin_medium"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/arrow_zoom_out"
                                android:drawablePadding="@dimen/activity_margin_medium"
                                android:text="@string/dtth" />

                            <TextView
                                android:id="@+id/tvDTTNTangHam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="@string/m2" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vDaCongNhanTangham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:tag="dien_tich_san_xay_dung_tang_ham"
                            app:input_hint="@string/nhap_dien_tich"
                            app:label_end="@string/m2"
                            app:label_icon_img="@drawable/ic_under_huong_dong"
                            app:label_title="@string/da_cong_nhan" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vCPCHCTangHam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:tag="dien_tich_san_xay_dung_tang_ham"
                            app:input_hint="@string/nhap_dien_tich"
                            app:label_end="@string/m2"
                            app:label_icon_img="@drawable/ic_under_huong_dong"
                            app:label_title="@string/co_phep_chua_hoan_cong" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hide_bottom_line="true">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vKhongCoPhepTangHam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:tag="dien_tich_san_xay_dung_tang_ham"
                            app:input_hint="@string/nhap_dien_tich"
                            app:label_end="@string/m2"
                            app:label_icon_img="@drawable/ic_under_huong_dong"
                            app:label_title="@string/khong_co_phep" />

                    </com.citics.valuation.customview.CustomViewDotLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.citics.valuation.customview.CiticsTextChooser
                    android:id="@+id/vCapNha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:tag="cap_nha"
                    app:text_chooser_icon_img="@drawable/ic_ket_noi_giao_thong"
                    app:text_chooser_input_hint="@string/cap_nha"
                    app:text_chooser_title="@string/cap_nha" />

                <com.citics.valuation.customview.CiticsTextChooser
                    android:id="@+id/vKetCau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:maxLines="5"
                    android:tag="ket_cau_nha"
                    app:text_chooser_icon_img="@drawable/ic_ket_cau_duong"
                    app:text_chooser_input_hint="@string/ket_cau"
                    app:text_chooser_title="@string/ket_cau" />

                <com.citics.valuation.customview.CiticsTextField
                    android:id="@+id/vMoTaCongTrinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:maxLength="1000000"
                    android:tag="mo_ta_cong_trinh"
                    app:input_hint="@string/mo_ta_cong_trinh"
                    app:label_icon_img="@drawable/ic_ket_cau_duong"
                    app:label_title="@string/mo_ta_cong_trinh" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/l11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large">

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/vNamXayDung"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:tag="nam_xay_dung"
                        app:bg_radius="LEFT"
                        app:input_hint="@string/nam_xay_dung"
                        app:label_icon_img="@drawable/ic_nam_xay_dung"
                        app:label_title="@string/nam_xay_dung" />

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/vNamSuaChua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:tag="nam_sua_chua"
                        app:bg_radius="RIGHT"
                        app:input_hint="@string/nam_sua_chua"
                        app:label_icon_img="@drawable/ic_nam_sua_chua"
                        app:label_title="@string/nam_sua_chua" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lnCauTrucPhong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:orientation="vertical">

                    <com.citics.valuation.customview.TextViewDrawableSize
                        android:id="@+id/t12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/arrow_zoom_out"
                        android:drawablePadding="@dimen/activity_margin_medium"
                        android:text="@string/cau_truc_phong" />

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vPhongNgu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:tag="so_phong_ngu"
                            app:input_hint="@string/phong_ngu"
                            app:label_icon_img="@drawable/ic_phong_ngu"
                            app:label_title="@string/phong_ngu" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vPhongVeSinh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:tag="so_wc"
                            app:input_hint="@string/phong_ve_sinh"
                            app:label_icon_img="@drawable/ic_phong_ngu"
                            app:label_title="@string/phong_ve_sinh" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/d15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vPhongKhach"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:tag="so_phong_khach"
                            app:input_hint="@string/phong_khach"
                            app:label_icon_img="@drawable/ic_phong_khach"
                            app:label_title="@string/phong_khach" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <com.citics.valuation.customview.CustomViewDotLayout
                        android:id="@+id/vDotPhongBep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.citics.valuation.customview.CiticsTextField
                            android:id="@+id/vPhongBep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:tag="so_phong_bep"
                            app:input_hint="@string/phong_bep"
                            app:label_icon_img="@drawable/ic_phong_khach"
                            app:label_title="@string/phong_bep" />

                    </com.citics.valuation.customview.CustomViewDotLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRooms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.citics.valuation.customview.ButtonAddNewLayout
                        android:id="@+id/btnAddNewRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_large"
                        app:button_text="@string/them_loai_phong_khac" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.citics.valuation.customview.ChooserWithChipsLayout
                    android:id="@+id/vCSKTHT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:tag="co_so_ha_tang_ky_thuat"
                    app:chooser_chip_title="@string/co_so_ha_tang_ky_thuat" />

                <com.citics.valuation.customview.CiticsTextChooser
                    android:id="@+id/vSoSanhVoiThucTe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:maxLines="3"
                    app:text_chooser_icon_img="@drawable/ic_so_sanh_voi_thuc_te"
                    app:text_chooser_input_hint="@string/so_sanh_voi_thuc_te"
                    app:text_chooser_title="@string/so_sanh_voi_thuc_te" />

                <com.citics.valuation.customview.CiticsTextField
                    android:id="@+id/vGhiChu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:tag="so_sanh_thuc_te_co_so_ha_tang_ky_thuat_khac"
                    app:input_hint="@string/nhap_noi_dung_ghi_chu"
                    app:label_title="@string/gctvctxd" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lnTinhGiaCongTrinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:orientation="vertical">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin_large"
                        android:text="@string/cttdgxd"
                        android:textStyle="bold" />

                    <com.citics.valuation.customview.ThongTinLayout
                        android:id="@+id/vDonGiaXayDung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:thong_tin_layout_default_value="@string/gach"
                        app:thong_tin_layout_icon="@drawable/ic_hammer"
                        app:thong_tin_layout_title="@string/don_gia_xay_dung"
                        app:thong_tin_layout_unit="@string/dm2" />

                    <com.citics.valuation.customview.ThongTinLayout
                        android:id="@+id/vClcl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:thong_tin_layout_default_value="@string/gach"
                        app:thong_tin_layout_icon="@drawable/ic_clcl"
                        app:thong_tin_layout_title="@string/clcl"
                        app:thong_tin_layout_unit="@string/pt" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <com.citics.valuation.customview.ButtonUpdateLayout
        android:id="@+id/btnCapNhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/base_margin_10" />

</LinearLayout>