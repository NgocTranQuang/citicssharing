<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/dimen_20"
        app:cardElevation="16dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40"
                android:contentDescription="@string/empty"
                android:src="@drawable/ic_lock_user"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_margin"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/tkdbk"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/text_size_21"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconImg" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="300dip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTxt">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/descriptionTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_margin_large"
                        android:layout_marginTop="@dimen/activity_margin_large"
                        android:layout_marginEnd="@dimen/activity_margin_large"
                        android:layout_marginBottom="@dimen/activity_margin_large"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold"
                        tools:text="@string/tnhs_tc" />

                    <TextView
                        android:id="@+id/tvMoTa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/activity_margin_large"
                        tools:text="Bạn cần liên hệ với quản lý trực tiếp tại Citics.vn giải trình và đề xuất mở lại tài khoản.
Hoặc gửi đề xuất đến email doitac@citics.com.vn. Chúng tôi sẽ phản hồi đến bạn trong vòng 48hr." />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/positiveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_large"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginEnd="@dimen/activity_margin_large"
                android:layout_marginBottom="@dimen/activity_margin_large"
                android:background="@drawable/button_background_selector"
                android:text="@string/i_got_it"
                android:textAllCaps="false"
                android:textColor="@drawable/btn_txt_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollView" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>