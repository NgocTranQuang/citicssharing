<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Title21Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_margin_large"
            android:layout_marginVertical="@dimen/activity_margin_large"
            android:text="@string/chi_tiet_can_ho" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/lnContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin_large">

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vLoaiHinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="loai_can_ho"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_box"
                app:thong_tin_layout_title="@string/loai_hinh" />


            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vDienTichTimTuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="dien_tich_tim_tuong"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/arrow_zoom_out"
                app:thong_tin_layout_title="@string/dien_tih_tim_tuong"
                app:thong_tin_layout_unit="@string/m2" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vDienTichThongThuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="dien_tich_thong_thuy"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/arrow_zoom_out"
                app:thong_tin_layout_title="@string/dien_tich_thong_thuy"
                app:thong_tin_layout_unit="@string/m2" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vThap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:tag="thap"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_so_thap"
                app:thong_tin_layout_title="@string/thap" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vTang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="tang"
                app:thong_tin_layout_default_value="@string/gach"

                app:thong_tin_layout_icon="@drawable/ic_so_tang"
                app:thong_tin_layout_title="@string/tang" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vHuongNha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:tag="huong"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_mat_troi"
                app:thong_tin_layout_title="@string/huong_nha" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vHuongCanhQuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:tag="canh_quan"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_co_cau_can_ho"
                app:thong_tin_layout_title="@string/huong_canh_quan" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vPhongNgu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:tag="so_phong_ngu"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_phong_ngu"
                app:thong_tin_layout_title="@string/phong_ngu" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vPhongVeSinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="so_wc"

                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_nha_ve_sinh"
                app:thong_tin_layout_title="@string/phong_ve_sinh" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vPhongKhach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:tag="so_phong_khach"
                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_phong_khach"
                app:thong_tin_layout_title="@string/phong_khach" />

            <citics.sharing.customview.ThongTinLayout
                android:id="@+id/vPhongBep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="so_phong_bep"

                app:thong_tin_layout_default_value="@string/gach"
                app:thong_tin_layout_icon="@drawable/ic_tu_lanh"
                app:thong_tin_layout_show_divider="false"
                app:thong_tin_layout_title="@string/phong_bep" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vEditCanHo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/cardview_radius"
                app:cardElevation="@dimen/dimen_4"
                app:strokeColor="@color/color_border_cardview"
                app:strokeWidth="1dp">

                <citics.sharing.customview.TextViewDrawableSize
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_8"
                    android:drawableStart="@drawable/ic_square_and_pencil"
                    android:drawablePadding="@dimen/dimen_8"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:padding="@dimen/activity_margin_medium"
                    android:text="@string/chinh_sua_thong_tin_tai_san"
                    android:textSize="@dimen/text_size_15" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</merge>