<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.glide.slider.library.SliderLayout
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/activity_margin_large"
            android:background="@drawable/bg_count_slider_image"
            android:paddingStart="@dimen/activity_margin_large"
            android:paddingTop="@dimen/activity_margin_medium"
            android:paddingEnd="@dimen/activity_margin_large"
            android:paddingBottom="@dimen/activity_margin_medium"
            android:textColor="@color/white" />
    </RelativeLayout>

</merge>
