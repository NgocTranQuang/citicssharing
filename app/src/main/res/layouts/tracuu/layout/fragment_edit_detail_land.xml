<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.citics.valuation.customview.HeaderLayout
        android:id="@+id/headerLayout"
        style="@style/styleHeaderLayout"
        app:header_title="@string/thay_doi_thong_tin_thua_dat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_bg_screen"
        android:clipToPadding="false">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/vScrolling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical">

            <com.citics.valuation.customview.AddressLayout
                android:id="@+id/vAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/activity_margin_large">

                <TextView
                    android:id="@+id/titleTxt"
                    style="@style/styleTextViewTitleInTab"
                    android:text="@string/vi_tri"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.citics.valuation.customview.TextViewDrawableSize
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_sotosothua"
                    android:text="@string/tbdsts"
                    app:fontFamily="@font/quicksand_bold"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:drawablePadding="@dimen/activity_margin_medium"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/df_sotosothua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:orientation="horizontal">


                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/soToTF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:tag="so_to"
                        app:bg_radius="LEFT"
                        app:input_hint="@string/lookup_filter_soto"
                        app:label_icon_img="@drawable/ic_sotosothua"
                        app:label_show_icon="true"
                        app:label_title="@string/lookup_filter_soto"
                        app:layout_constraintEnd_toStartOf="@id/soThuaTF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/df_areaChooser" />

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/soThuaTF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:tag="so_thua"
                        app:bg_radius="RIGHT"
                        app:input_hint="@string/lookup_filter_sothua"
                        app:label_icon_img="@drawable/ic_sotosothua"
                        app:label_show_icon="true"
                        app:label_title="@string/lookup_filter_sothua"
                        app:layout_constraintBottom_toBottomOf="@id/soToTF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/soToTF"
                        app:layout_constraintTop_toTopOf="@id/soToTF" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.citics.valuation.customview.TextViewDrawableSize
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_map"
                    android:text="@string/toa_do_google"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:drawablePadding="@dimen/activity_margin_medium"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/df_toa_do"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_large"
                    android:orientation="horizontal">

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/viDoTF"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:tag="vi_do"
                        app:bg_radius="LEFT"
                        app:input_hint="@string/vi_do"
                        app:label_icon_img="@drawable/ic_ten_duong"
                        app:label_show_icon="true"
                        app:label_title="@string/vi_do"
                        app:is_kdvd="true"
                        app:layout_constraintEnd_toStartOf="@id/soThuaTF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/df_tenDuongTF" />

                    <com.citics.valuation.customview.CiticsTextField
                        android:id="@+id/kinhDoTF"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:tag="kinh_do"
                        app:bg_radius="RIGHT"
                        app:is_kdvd="true"
                        app:input_hint="@string/kinh_do"
                        app:label_icon_img="@drawable/ic_ten_duong"
                        app:label_show_icon="true"
                        app:label_title="@string/kinh_do"
                        app:layout_constraintBottom_toBottomOf="@id/viDoTF"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/viDoTF"
                        app:layout_constraintTop_toTopOf="@id/viDoTF" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.citics.valuation.customview.dfAssetData.nhadat.edit.LayoutDFNDChiTietThuaDat
                android:id="@+id/vChiTietThuaDat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_large" />

            <com.citics.valuation.customview.dfAssetData.nhadat.edit.LayoutDFNDHienTrangThuaDat
                android:id="@+id/vHienTrangThuaDat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <com.citics.valuation.customview.ButtonUpdateLayout
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/activity_margin_large" />

</androidx.appcompat.widget.LinearLayoutCompat>
