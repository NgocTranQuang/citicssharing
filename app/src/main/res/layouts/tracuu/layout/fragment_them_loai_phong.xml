<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/system_status_bar"
    android:paddingBottom="@dimen/system_status_bar">

    <citics.sharing.customview.HeaderLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:header_title="@string/them_loai_phong_khac" />

    <citics.sharing.customview.CiticsTextField
        android:id="@+id/vTenPhong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_large"
        android:layout_marginEnd="@dimen/activity_margin_large"
        app:input_hint="@string/ten_phong"
        app:label_icon_img="@drawable/ic_star_fill"
        app:label_title="@string/ten_phong" />

    <citics.sharing.customview.CiticsTextField
        android:id="@+id/vSoPhong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/activity_margin_large"
        android:layout_marginTop="@dimen/activity_margin_large"
        android:layout_marginEnd="@dimen/activity_margin_large"
        android:layout_weight="1"
        android:inputType="number"
        app:input_hint="@string/so_phong"
        app:label_icon_img="@drawable/ic_star_fill"
        app:label_title="@string/so_phong" />

    <citics.sharing.customview.ButtonUpdateLayout
        android:id="@+id/btnTiepTuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:button_update_layout_text="@string/tiep_tuc" />
</LinearLayout>