<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    android:fitsSystemWindows="true"
    android:paddingTop="@dimen/system_status_bar">

    <TextView
        android:id="@+id/registerTxt"
        android:layout_width="wrap_content"
        android:layout_height="44dip"
        android:layout_margin="20dip"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/title_login_screen"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerTxt" />

    <TextView
        android:id="@+id/descriptionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin_20"
        android:layout_marginTop="10dip"
        android:text="@string/login_description"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/bg_radius_white_login"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTxt">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xin_chao"
                android:textSize="@dimen/text_size_19" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_medium"
                android:fontFamily="@font/quicksand_bold"
                android:textFontWeight="700"
                android:textSize="@dimen/text_size_21"
                tools:text="Trần Thị Mùi" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.citics.valuation.customview.CiticsTextField
            android:id="@+id/emailTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_20"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="100000000"
            app:input_hint="@string/login_hint_email"
            app:label_icon_img="@drawable/ic_username"
            app:label_show_icon="true"
            app:label_title="@string/login_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnUsername" />

        <com.citics.valuation.customview.CiticsTextField
            android:id="@+id/passTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_20"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            app:input_hint="@string/login_hint_pass"
            app:label_icon_img="@drawable/ic_lock"
            app:label_show_icon="true"
            app:label_title="@string/login_pass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailTF" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginBtn"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_marginTop="@dimen/activity_margin_large"
            android:background="@drawable/button_background_selector"
            app:layout_constraintEnd_toStartOf="@+id/faceIdBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passTF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/login_signin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/faceIdBtn"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginStart="@dimen/activity_margin_large"
            android:layout_marginEnd="10dip"
            android:background="@drawable/background_corner"
            android:contentDescription="@string/empty"
            android:src="@drawable/ic_finger_printer"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/loginBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/loginBtn"
            app:layout_constraintTop_toTopOf="@+id/loginBtn" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/forgetPassBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/login_forgetpass"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/notme"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/vCenter"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNotme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/not_me"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/forgetPassBtn" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>