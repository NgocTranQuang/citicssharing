<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CBank24" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorMainBlue</item>
        <item name="colorPrimaryVariant">@color/colorMainBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorMainBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorStartGradientHeader</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--         <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--        <item name="android:fitsSystemWindows">true</item>-->

        <!--C-AGENt-->
        <!--        <item name="android:statusBarColor">-->
        <!--            @android:color/transparent-->
        <!--        </item>-->

        <!-- Optional: set the status bar light and content dark. -->
        <item name="android:windowLightStatusBar">
            true
        </item>

        // StatusBar has the grey background
        <item name="android:windowTranslucentStatus">
            false
        </item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>

        <item name="android:windowSoftInputMode">adjustResize</item>
        <!--        <item name="android:windowBackground">@color/colorStartGradientHeader</item>-->
        <item name="android:fitsSystemWindows">true</item>

    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="LoadingDialogTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="styleHeaderLayoutWithoutPadding">
        <item name="android:background">@drawable/gradient_background_header</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="styleHeaderLayout" parent="styleHeaderLayoutWithoutPadding">
        <!--        <item name="android:paddingTop">@dimen/system_status_bar</item>-->
    </style>

    <style name="stfMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="stfButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_button_corner</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="splash" parent="FullScreen">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="Title21Style">
        <item name="android:textSize">@dimen/text_size_21</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="Title18Style">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:fontWeight">700</item>

    </style>

    <style name="Title16Style">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:fontWeight">700</item>

    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutLookup" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="FullScreen" parent="Theme.CBank24">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="styleTextViewTitleInTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_radius_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/color_bg_mdsdd</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:padding">@dimen/activity_margin_large</item>
    </style>

